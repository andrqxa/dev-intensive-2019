<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" style="@style/Profile.Metrics.Label">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/profile_bg"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" app:layout_constraintDimensionRatio="16:9" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="@dimen/avatar_round_size"
            android:layout_height="@dimen/avatar_round_size"
            app:srcCompat="@drawable/avatar_default"
            android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView4" app:layout_constraintStart_toStartOf="@+id/imageView4"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/textView"
    />
    <ImageView
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40"
            app:srcCompat="@drawable/ic_brightness_high_black_24dp"
            android:id="@+id/imageView6"
            android:background="@drawable/btn_round_bg" app:layout_constraintEnd_toStartOf="@+id/imageView5"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
    <ImageView
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:id="@+id/imageView7"
            android:background="@drawable/btn_round_bg" app:layout_constraintStart_toEndOf="@+id/imageView5"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
    <TextView
            android:text="John Doe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" style="@style/Profile.Header.Nickname"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <TextView
            android:text="Junior Android Developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" style="@style/Profile.Header.Rank"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/imageView4"
            android:layout_marginBottom="32dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/view"
            android:background="@color/color_primary_light"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:id="@+id/view2" app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
            android:background="@color/color_divider_light"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="54dp" android:id="@+id/textView3" style="@style/Profile.Metrics.Value"
            app:layout_constraintBottom_toTopOf="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" style="@style/Profile.Metrics.Label"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="287dp" android:id="@+id/textView5" style="@style/Profile.Metrics.Value"
            app:layout_constraintBottom_toTopOf="@+id/textView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" style="@style/Profile.Metrics.Label"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"/>
</android.support.constraint.ConstraintLayout>